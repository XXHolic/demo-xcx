<!--index.wxml-->
<view class="container">
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{swiperOptions.indicatorDots}}"
      autoplay="{{swiperOptions.autoplay}}" interval="{{swiperOptions.interval}}" duration="{{swiperOptions.duration}}">
      <block wx:for="{{swiperOptions.background}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item">
            <image style="height: 100%;" src="{{item.src}}" mode="{{item.mode}}"></image>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>
