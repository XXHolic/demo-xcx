.list-item {
  display: flex;
  border-bottom: 2rpx solid #F5F5F5;
  padding: 20rpx;
}

.item-left {
  overflow: hidden;
  width: 320rpx;
  height: 200rpx;
}

.item-img {
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
}

.item-right {
  padding-left: 20rpx;
  color: #999;
  flex: 1;
}

.item-title {
  display: -webkit-box;
  height: 70rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #212121;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-status {
  display: inline-block;
  margin-bottom: 6rpx;
  border-radius: 6rpx;
  padding: 0 4rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fa5a57;
}

.item-status-border {
  border: 2rpx solid #fa5a57;
}

.item-name {
  margin-bottom: 6rpx;
}

.item-icon-author,.item-icon-video {
  margin-right: 6rpx;
  border: 2rpx solid #999;
  border-radius: 4rpx;
  padding: 0 2rpx;
  font-size: 22rpx;
}